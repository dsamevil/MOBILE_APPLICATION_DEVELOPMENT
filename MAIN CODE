import android.os.Bundle;
import android.support.v7.app.AppCompatActivity;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.Toast;

import java.io.File;
import java.util.ArrayList;
import java.util.Collections;

public class MainActivity extends AppCompatActivity {

    private ArrayList<String> fileList;
    private ArrayAdapter<String> adapter;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        ListView listView = findViewById(R.id.listView);
        fileList = new ArrayList<>();
        adapter = new ArrayAdapter<>(this, android.R.layout.simple_list_item_1, fileList);
        listView.setAdapter(adapter);

        File dir = new File("/sdcard/Download/"); // change directory path here
        File[] files = dir.listFiles();

        for (File file : files) {
            if (file.isFile()) {
                String fileName = file.getName();
                String fileExt = fileName.substring(fileName.lastIndexOf(".") + 1);
                fileList.add(fileName);

                switch (fileExt.toLowerCase()) {
                    case "pdf":
                        moveFile(file, "/sdcard/Download/PDF/");
                        break;
                    case "doc":
                    case "docx":
                        moveFile(file, "/sdcard/Download/Word/");
                        break;
                    case "ppt":
                    case "pptx":
                        moveFile(file, "/sdcard/Download/PPT/");
                        break;
                    case "xls":
                    case "xlsx":
                        moveFile(file, "/sdcard/Download/Excel/");
                        break;
                    case "txt":
                        moveFile(file, "/sdcard/Download/Text/");
                        break;
                }
            }
        }
        Collections.sort(fileList);
        adapter.notifyDataSetChanged();

        listView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                String selectedItem = fileList.get(position);
                Toast.makeText(getApplicationContext(), "Selected item: " + selectedItem, Toast.LENGTH_SHORT).show();
            }
        });
    }

    private void moveFile(File sourceFile, String destDir) {
        File destFile = new File(destDir + sourceFile.getName());
        if (!destFile.getParentFile().exists()) {
            destFile.getParentFile().mkdirs();
        }
        sourceFile.renameTo(destFile);
    }
}
